@{
    Layout = "_Layout";
}

<form action="/vendors/@Model.Id/orders" method="post">
    <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
    <div class="mb-3">
        <label class="form-label" for="orderTitle">New order name: </label>
        <input class="form-control" id="orderTitle" name="orderTitle" type="text">
    </div>
    <div class="mb-3">
        <label class="form-label" for="orderDescription">New order description: </label>
        <input class="form-control" id="orderrDescription" name="orderDescription" type="text">
    </div>
    <div class="mb-3">
        <label class="form-label" for="orderPrice">New order price: </label>
        <input class="form-control" id="orderPrice" name="orderPrice" type="number">
    </div>
    <button type="submit">Add order</button>
</form>